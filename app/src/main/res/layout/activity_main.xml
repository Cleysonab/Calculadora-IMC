<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculadora IMC"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="58dp" android:textStyle="bold"
            android:textAlignment="center" android:textSize="36sp" android:id="@+id/txvCalculadora"/>
    <TextView
            android:text="Olá, Fulano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txvNome" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/txvCalculadora" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="18sp"/>
    <TextView
            android:text="Massa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txvMassa" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/txvNome"/>
    <SeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/sbMassa"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            app:layout_constraintStart_toStartOf="@+id/txvMassa"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txvMassa"/>
    <TextView
            android:text="Altura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txvAltura" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/sbMassa"/>
    <SeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/sbAltura" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            app:layout_constraintStart_toStartOf="@+id/txvAltura"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txvAltura"/>
    <Button
            android:text="Calcular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCalcular" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/sbAltura"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Mudar nome padrão"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMudarNome" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Resultado"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/txvResultado" app:layout_constraintEnd_toEndOf="@+id/btnCalcular"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/btnCalcular"
            android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/btnCalcular"
            app:layout_constraintHorizontal_bias="0.498" android:textSize="30sp"/>
    <TextView
            android:text="Situação"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txvSituação"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/txvResultado" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="24sp"/>

</android.support.constraint.ConstraintLayout>